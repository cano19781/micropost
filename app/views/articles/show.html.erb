<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
 
<h2>Comentarios</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Titulo:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comentario:</strong>
    <%= comment.body %>
  </p>
<% end %>
 
<h2>Agregar Comentario:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :titulo %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :comentario %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Guardar" %>
  </p>
<% end %>
 
<%= link_to 'Editar Comentario', edit_article_path(@article) %> |
<%= link_to 'Atras', articles_path %>